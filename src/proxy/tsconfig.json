{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es2017"],
    "types": ["node"],
    "declaration": true,
    "declarationDir": "build/typings"
  },
  "exclude": ["node_modules", "test", "build"],
  "include": ["src/**/*"]
}
